<%layout("/layout/boilerplate")%>
<!-- we have used novalidate class in form to disable the default HTML5 validation and used our custom Bootstrap validation -->
<!-- We have added success-faliure client side validation in the input fields -->
<body>
    <h1 class="text-center">Create New Listing</h1><br>
    <!-- novalidate is to disable the default validation of the browser we are using our own validation Bootstrap -->
    <form method="post" action="/listings" novalidate class="needs-validation" >
        <div class="row">
            <div class="col-8 offset-2">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="e.g. Cozy Cottage" required>
            <!-- valid-feedback is to show the message when the input is valid -->
            <div class="valid-feedback">
                Title Looks Great!
              </div>
              <!-- invalid-feedback is to show the message when the input is invalid -->
              <div class="invalid-feedback">
                Enter a valid title
              </div>
        </div>
        <br>

        <div class="mb-3"   >
            <label for="description" class="form-label">Description</label>
            <textarea placeholder="Describe the property" class="form-control" name="description" id="description" cols="30" rows="3
            " required></textarea>
            <div class="valid-feedback">
                Description Looks Awesome!
              </div>
              <div class="invalid-feedback">
                Add a short description of the property
              </div>
        </div>
        <br>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" id="price" name="price"  placeholder="e.g. 1799" required>
                  <div class="invalid-feedback">
                    Enter a valid price
                  </div>
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" id="location" name="location" placeholder="e.g. Street, Goa" required>

                  <div class="invalid-feedback">
                   Location should be a valid 
                  </div>
            </div>
        </div>
        <br>
        
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" id="country" name="country" class="form-control" placeholder="e.g. India" required>
            <div class="invalid-feedback">
                Country name should be a valid 
               </div>
        </div>
        <br>

        <div class="mb-3">
            <label for="image" class="form-label" >Image</label>
            <input type="url" class="form-control" id="image" name="image" placeholder="https://images.pexels.com/photos/1640777/pexels-photo-1640777.jpeg" required>
            <div class="invalid-feedback">
                Enter a valid image url
               </div>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Add Listing</button>
    </form>
</div>
</div>
</body>



</html>