<%layout("/layout/boilerplate")%>
<body>
    <h1 class="text-center">Create New Listing</h1><br>
    <form method="post" action="/listings">
        <div class="row">
            <div class="col-8 offset-2">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="e.g. Cozy Cottage" required>
        </div>
        <br>

        <div class="mb-3"   >
            <label for="description" class="form-label">Description</label>
            <textarea placeholder="Describe the property" class="form-control" name="description" id="description" cols="30" rows="3
            " required></textarea>
        </div>
        <br>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" id="price" name="price"  placeholder="e.g. 1799">
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" id="location" name="location" placeholder="e.g. Street, Goa">
            </div>
        </div>
        <br>
        
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" id="country" name="country" class="form-control" placeholder="e.g. India" required>
        </div>
        <br>

        <div class="mb-3">
            <label for="image" class="form-label" >Image</label>
            <input type="url" class="form-control" id="image" name="image" placeholder="https://images.pexels.com/photos/1640777/pexels-photo-1640777.jpeg" required>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Add Listing</button>
    </form>
</div>
</div>
</body>



</html>