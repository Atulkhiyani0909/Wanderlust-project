<%layout("/layout/boilerplate")%>
<body>
  
    <div class="row mt-3">
        <div class="col-md-6 offset-md-2" >
        <h3>Listing Details</h3>
    </div>

    <div class="card col-md-6 offset-md-2 show-card" >
        <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="<%= listing.image.filename %>">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br>
            <%= listing.description %>
            <br>
            <i class="fa-solid fa-indian-rupee-sign"></i> <%= listing.price.toLocaleString() %> /night
            <br>
            <i class="fa-solid fa-location-dot"></i> <%= listing.location %>, <%= listing.country %>
            <br>
            
        </p>
        </div>
      </div>
    </div>
    
    
    <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger offset-4 col-1.9">Edit</a>
    
         <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-dark offset-4 delete-btn">Delete</button>
    </form>
    </div>
    
    
   
</body>

</html>