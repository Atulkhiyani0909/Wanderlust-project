<%layout("/layout/boilerplate")%>
<body>
  
    <div class="row mt-3">
        <div class="col-md-6 offset-md-2" >
        <h3><%=listing.title%></h3>
    </div>

    <div class="card col-md-6 offset-md-2 show-card" >
        <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="<%= listing.image.filename %>">
        <div class="card-body">
          <p class="card-text">
           <p class="card-text">  Owned By &nbsp;<i> <%=listing.owner.username%></i></p>
            <!-- <b><%= listing.title %></b> -->
            <br>
            <p class="card-text"><%= listing.description %></p>
            <br>
            <p class="card-text"><i class="fa-solid fa-indian-rupee-sign"></i> <%= listing.price.toLocaleString() %> /night </p>
            <br>
            <p class="card-text"><i class="fa-solid fa-location-dot"></i>&ensp;&nbsp;<%= listing.location %>, <%= listing.country %> </p>
            <br>
            
        </p>
      


    
   <% if(currUser && currUser._id.equals(listing.owner._id)){%>
        <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger col-2">Edit</a>
    
         <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-dark offset-3 delete-btn ">Delete</button>
    </form>
    </div>
  <%}%>
</div>
</div>
</div>
 

<%if(currUser){%>
<div class="col-8 offset-2 mb-3"></div>
      <hr>
      <h4>Leave a Review</h4>
      <form action="/listings/<%=listing.id%>/reviews" method="post" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
        <label for="rating"  class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
       <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="valid-feedback">
          Thanks for Commenting 
        </div>
        <div class="invalid-feedback">
          This is required 
        </div>
      </div>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
      </form>
<%}%>
    

      <hr>
      <p><b>All Reviews</b></p>
      <div class="row">
      <%for (review of listing.reviews) {%>
       <div class="card col-5 mb-3 ms-3">
        <div class="card-body">
          <h5 class="card-title">@<%=review.author.username%></h5>
          <p class="card-text"><%=review.comment%></p>
          <p class="card-text"><%=review.rating%> stars</p>
        </div>

        <!-- to check that the currUser is the author of that review -->
        <%if(currUser && currUser._id.equals(review.author._id)){%>
        <form  action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST"></form>
          <button class="btn btn-dark btn-sm mb-3">Delete</button>
        </form>
        <%}%>
      
       </div>
      <%}%>
    </div>
    </div>
    
   
</body>

</html>