<%layout("/layout/boilerplate")%>
<body>
  
    <div class="row mt-3">
        <div class="col-md-6 offset-md-2" >
        <h3><%=listing.title%></h3>
    </div>

    <div class="card col-md-6 offset-md-2 show-card" >
        <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="<%= listing.image.filename %>">
        <div class="card-body">
          <p class="card-text">
            <!-- <b><%= listing.title %></b> -->
            <br>
            <%= listing.description %>
            <br>
            <i class="fa-solid fa-indian-rupee-sign"></i> <%= listing.price.toLocaleString() %> /night
            <br>
            <i class="fa-solid fa-location-dot"></i>&ensp;&nbsp;<%= listing.location %>, <%= listing.country %>
            <br>
            
        </p>
        </div>
      </div>
    </div>
    
    
    <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger offset-4 col-1.9">Edit</a>
    
         <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-dark offset-4 delete-btn">Delete</button>
    </form>
  </div>
    

    <div class="col-8 offset-2 mb-3">
      <hr>
      <h4>Leave a Review</h4>
      <form action="/listings/<%=listing.id%>/reviews" method="post">
        <div class="mb-3 mt-3">
        <label for="rating"  class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
       <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
      </div>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
    
   
</body>

</html>